{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "BuildWithAI Boilerplate",
  "description": "Production-ready React Native boilerplate for creating powerful mobile applications with AI features",
  "colors": {
    "primary": "#10b981",
    "light": "#34d399",
    "dark": "#059669"
  },
  "icons": {
    "library": "lucide"
  },
  "favicon": "/logo/favicon.png",
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "styling": {
    "eyebrows": "breadcrumbs"
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Support",
          "icon": "mail",
          "href": "mailto:steffen@buildwithai.io"
        }
      ]
    },
    "groups": [
      {
        "group": "Setting Up Your App",
        "pages": [
          "index",
          {
            "group": "Setup",
            "icon": "rocket",
            "pages": [
              "quickstart/project-setup",
              "quickstart/app-configuration",
              "quickstart/development-setup",
              "quickstart/supabase-setup",
              "quickstart/install-development-build"
            ]
          },
          "features/mcp"
        ]
      },
      {
        "group": "Customization Guides",
        "pages": [
          "features/theme-customization",
          "features/app-icons-guide",
          "features/i18n"
        ]
      },
      {
        "group": "Optional Features",
        "icon": "puzzle",
        "pages": [
          {
            "group": "Authentication",
            "icon": "user-check",
            "pages": [
              "features/auth/google-auth",
              "features/auth/apple-auth"
            ]
          },
          "features/posthog-setup-v2",
          "features/sentry-setup",
          "features/push-setup"
        ]
      },
      {
        "group": "Monetizating Your App",
        "pages": [
          {
            "group": "In-App Purchases",
            "icon": "shopping-cart",
            "pages": [
              "features/in-app-purchases/superwall-setup",
              {
                "group": "Android Setup",
                "icon": "android",
                "pages": [
                  "features/in-app-purchases/google-play-console-setup",
                  "features/in-app-purchases/closed-testing",
                  "features/in-app-purchases/android-products",
                  "features/in-app-purchases/superwall-android"
                ]
              },
              {
                "group": "iOS Setup",
                "icon": "apple",
                "pages": [
                  "features/in-app-purchases/app-store-connect-setup",
                  "features/in-app-purchases/ios-sandbox",
                  "features/in-app-purchases/ios-products",
                  "features/in-app-purchases/superwall-ios"
                ]
              }
            ]
          },
          "features/admob-setup"
        ]
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor"
    ]
  },
  "errors": {
    "404": {
      "redirect": true
    }
  }
}